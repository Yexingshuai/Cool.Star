<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_close"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:src="@mipmap/icon_close" />
    </LinearLayout>

    <!--时间信息-->
    <RelativeLayout
        android:id="@+id/ll_calendar_detail_time"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/layout_title"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/calendar_detail_week"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="TUE"
                android:textColor="#333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/calendar_day"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="12"
                android:textColor="#333333"
                android:textSize="35sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/calendar_month"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="115dp"
            android:layout_marginBottom="15dp"
            android:text="十一月"
            android:textColor="#333333"
            android:textSize="16sp" />

        <com.example.myapp.myapp.ui.view.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_head2" />
    </RelativeLayout>

    <!--具体时间段-->

    <LinearLayout
        android:id="@+id/ll_calendar_detail_mesg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_calendar_detail_time"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingLeft="40dp">

        <TextView
            android:id="@+id/calendar_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textColor="#333333"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/calendar_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="13dp"
            android:drawableLeft="@mipmap/calendar_timer_lv"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="13:00 PM  18:00 PM"
            android:textColor="#00c994"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:maxLines="4"
            android:text="哈哈哈哈哈哈哈哈哈啊哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
            android:textColor="#666666"
            android:textSize="14sp" />

    </LinearLayout>

    <!--位置信息-->

    <!--地图-->
    <android.support.v7.widget.CardView
        android:id="@+id/detail_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_calendar_detail_mesg"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        app:cardBackgroundColor="#F9F9F9"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp"
        app:contentPadding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/calendar_map"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@mipmap/def_calendar_map_big"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/calendar_map"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/calendar_address1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="地点"
                    android:textColor="#333333"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/calendar_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="随行人等"
                    android:textColor="#999999"
                    android:textSize="14sp" />

            </LinearLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <!--编辑删除-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#F7F7F7"
        android:elevation="6dp">

        <LinearLayout
            android:id="@+id/ll_detail_bottom_self"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/ll_detail_del"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dp"
                    android:drawableLeft="@mipmap/calendar_del"
                    android:drawablePadding="10dp"
                    android:text="删除"
                    android:textColor="#777777"
                    android:textSize="13sp"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_detail_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dp"
                    android:drawableLeft="@mipmap/calendar_edit"
                    android:drawablePadding="10dp"
                    android:text="编辑"
                    android:textColor="#777777"
                    android:textSize="13sp"

                    />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>