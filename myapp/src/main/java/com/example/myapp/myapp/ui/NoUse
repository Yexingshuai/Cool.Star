 4.music

             private void music() {
                 try {
                     MediaPlayer player = MediaPlayer.create(this, R.raw.baojing);
                     player.start();
                 } catch (Exception e) {
                     e.printStackTrace();
                     Toast.makeText(this, e.getMessage(), Toast.LENGTH_LONG).show();
                 }
             }